<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_mine_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@mipmap/ic_back"
        app:title="@string/mine_info_title"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_only"
                android:padding="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_mine_info_avatar"
                    android:layout_width="@dimen/mine_info_avatar_size"
                    android:layout_height="@dimen/mine_info_avatar_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/default_margin"
                    android:src="@mipmap/bg_drawer"
                    app:civ_border_color="@color/colorDivider"
                    app:civ_border_width="1px"
                    />

                <LinearLayout
                    android:id="@+id/ll_mine_info_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/civ_mine_info_avatar"
                    android:layout_toStartOf="@+id/civ_mine_info_avatar"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:text="@string/mine_info_user_count"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />

                    <TextView
                        android:id="@+id/tv_mine_info_user_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        tools:text="13564841159"
                        />

                </LinearLayout>
                <View
                    android:id="@+id/v_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider"
                    android:layout_toLeftOf="@id/civ_mine_info_avatar"
                    android:layout_toStartOf="@id/civ_mine_info_avatar"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_below="@id/ll_mine_info_count"
                    />
                <LinearLayout
                    android:id="@+id/ll_mine_info_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/civ_mine_info_avatar"
                    android:layout_toStartOf="@+id/civ_mine_info_avatar"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/v_divider"
                    android:padding="@dimen/default_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:text="@string/mine_info_nickname"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />

                    <TextView
                        android:id="@+id/tv_mine_info_nickname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        tools:text="13564841159"
                        />
                    <ImageView
                        android:layout_width="@dimen/mine_info_arrow_size"
                        android:layout_height="@dimen/mine_info_arrow_size"
                        android:src="@mipmap/ic_right_arrow"/>
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_border_only"
                android:padding="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_margin">
                <LinearLayout
                    android:id="@+id/ll_mine_info_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_info_introduction"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_mine_info_introduction"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <ImageView
                        android:layout_width="@dimen/mine_info_arrow_size"
                        android:layout_height="@dimen/mine_info_arrow_size"
                        android:src="@mipmap/ic_right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider"
                    android:layout_margin="@dimen/default_margin"
                    />
                <LinearLayout
                    android:id="@+id/ll_mine_info_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_info_sex"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_mine_info_sex"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <ImageView
                        android:layout_width="@dimen/mine_info_arrow_size"
                        android:layout_height="@dimen/mine_info_arrow_size"
                        android:src="@mipmap/ic_right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider"
                    android:layout_margin="@dimen/default_margin"
                    />
                <LinearLayout
                    android:id="@+id/ll_mine_info_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_info_qq"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_mine_info_qq"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <ImageView
                        android:layout_width="@dimen/mine_info_arrow_size"
                        android:layout_height="@dimen/mine_info_arrow_size"
                        android:src="@mipmap/ic_right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider"
                    android:layout_margin="@dimen/default_margin"
                    />
                <LinearLayout
                    android:id="@+id/ll_mine_info_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_info_email"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_mine_info_email"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <ImageView
                        android:layout_width="@dimen/mine_info_arrow_size"
                        android:layout_height="@dimen/mine_info_arrow_size"
                        android:src="@mipmap/ic_right_arrow"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider"
                    android:layout_margin="@dimen/default_margin"
                    />
                <LinearLayout
                    android:id="@+id/ll_mine_info_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/default_padding">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_info_page"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_mine_info_page"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/mine_info_text_size"
                        />
                    <ImageView
                        android:layout_width="@dimen/mine_info_arrow_size"
                        android:layout_height="@dimen/mine_info_arrow_size"
                        android:src="@mipmap/ic_right_arrow"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>